# 애플리케이션
NODE_ENV=development
PORT=3000
GLOBAL_PREFIX=api/v1

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# 데이터베이스
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=your_password
